{
  "name": "@normalized-db/normalizer",
  "version": "3.0.0",
  "author": "Sandro Schleu",
  "license": "MIT",
  "description": "Normalize `JavaScript` objects based on a simple schema (implemented with `TypeScript`).",
  "keywords": [
    "JavaScript",
    "Normalization"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/normalized-db/normalizer.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "tslint --force ./src/*.ts ./src/**/*.ts",
    "lint-fix": "tslint --force --fix ./src/*.ts ./src/**/*.ts",
    "cleanup": "rm -rf dist",
    "build": "pnpm cleanup && tsc -d && node build.mjs",
    "test": "pnpm cleanup && jest"
  },
  "dependencies": {
    "@normalized-db/core": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tslint": "^6.1.3",
    "typescript": "~5.2.2"
  }
}
