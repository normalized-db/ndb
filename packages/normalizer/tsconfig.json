{
  "compileOnSave": false,
  "compilerOptions": {
    // Building
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "ESNEXT",
    "moduleResolution": "node",
    "lib": ["ESNEXT", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    // Emit
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    // Linting
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "jest.config.ts"
  ]
}
