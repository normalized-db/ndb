{
  "name": "@normalized-db/core",
  "version": "3.0.0",
  "author": "Sandro Schleu",
  "license": "MIT",
  "description": "Core-module for related 'normalized-db'-libraries providing common models and utility functions as well as the `Schema` (implemented with `TypeScript`).",
  "keywords": [
    "JavaScript",
    "Normalization",
    "IndexedDB"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/normalized-db/core.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "tslint --force ./src/*.ts ./src/**/*.ts",
    "lint-fix": "tslint --force --fix ./src/*.ts ./src/**/*.ts",
    "cleanup": "rm -rf dist",
    "build": "pnpm cleanup && tsc -d && node build.mjs",
    "test": "pnpm cleanup && jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tslint": "^6.1.3",
    "typescript": "~5.2.2"
  }
}
