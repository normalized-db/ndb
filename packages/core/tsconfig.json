{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "target": "ES2015",
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "jest.config.ts"
  ]
}
